<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

<context:component-scan base-package="com.xzhb.trainTicket"/>
    <context:property-placeholder location="enviroment/dataSource.properties" />

    <bean id="druidDataSource" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close">
        <property name="driverClassName">
                 <value>${jdbc.driver}</value>
        </property>
        <property name="url">
        <value>${jdbc.url}</value>
        </property>
        <property name="username">
            <value>${jdbc.username}</value>
                </property>
        <property name="password">
            <value>${jdbc.password}</value>
                </property>
        <property name="maxActive" value="20"/>
        <property name="initialSize" value="0"/>
        <property name="maxWait" value="60000"/>
    </bean>
    <!--基于MapperFactory的配置-->
    <!--
     <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
         <property name="dataSource" ref="druidDataSource"/>
        <property name="configLocation" value="classpath:springMybatisConfi.xml"/>
     </bean>
     <bean id="iStudentDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
         <property name="mapperInterface" value="com.xzhb.trainTicket.IStudentDao"/>
         <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
     </bean>
    -->
    <!-- ==============基于MapperScaner======= -->
   <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
    <property name="dataSource" ref="druidDataSource"/>
    <property name="mapperLocations" value="classpath:Dao/*.xml"/>
    </bean>
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.xzhb.trainTicket"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>
</beans>